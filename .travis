language: python

python:
  - "2.7"

branches:
  only:
  - master

before_install:
  - openssl aes-256-cbc -K $encrypted_bc4ab20c2dda_key -iv $encrypted_bc4ab20c2dda_iv -in key.pem.enc -out key.pem -d

install:
  - pip install ansible

before_script:
  - sudo sh -c "echo \"203.101.226.44  test-test\" >> /etc/hosts"

script:
  - cd ansible
  - ansible-playbook -i inventories/biocache-test ala-demo.yml --private-key ../key.pem -u $ANSIBLE_TEST_USER -s

addons:
  ssh_known_hosts:
  - biocache-test

